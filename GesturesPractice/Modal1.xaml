<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GesturesPractice.Modal1">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" >
            <Image x:Name="img" HeightRequest="300" WidthRequest="300">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapGestureRecognizerTapped" NumberOfTapsRequired="2"/>
                    <PinchGestureRecognizer PinchUpdated="OnPinchZoom" />
                </Image.GestureRecognizers>
            </Image>
            <Label x:Name="txt" Text="Collection Alien Frens" HorizontalOptions="Center" VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>